{
  "name": "osnova-react-environment",
  "author": "Aleksandr Snov <snov.contact@gmail.com>",
  "description": "Modern ready-to-use environment for quick start of new react application development",
  "keywords": [
    "webpack",
    "babel",
    "es6",
    "react",
    "redux",
    "boilerplate",
    "osnova"
  ],
  "license": "MIT",
  "main": "server/index.js",
  "private": false,
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/Noviel/osnova-react-environment.git"
  },
  "dependencies": {
    "better-npm-run": "^0.0.14",
    "osnova": "^0.23.0",
    "osnova-cluster-launcher": "^1.10.0",
    "osnova-lib": "1.1.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.22.0",
    "chokidar": "^1.6.1",
    "clean-webpack-plugin": "^0.1.15",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "2.2.0",
    "file-loader": "^0.10.0",
    "postcss-autoreset": "^1.2.1",
    "postcss-import": "^9.1.0",
    "postcss-initial": "^1.5.3",
    "postcss-loader": "^1.2.2",
    "postcss-use": "^2.3.0",
    "precss": "^1.4.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "2.2.0",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-node-externals": "^1.5.4"
  },
  "scripts": {
    "build": "npm run build-server && npm run build-client",
    "build-server": "better-npm-run build-server",
    "build-client": "better-npm-run build-client",
    "watch-client": "better-npm-run watch-client",
    "watch-server": "better-npm-run watch-server",
    "watch": "concurrently -k \"npm run watch-client\" \"npm run watch-server\"",
    "nodemon": "nodemon server/index.js --config dev/nodemon.json",
    "major-release": "npm --no-git-tag-version version major && npm publish",
    "minor-release": "npm --no-git-tag-version version minor && npm publish",
    "patch-release": "npm --no-git-tag-version version patch && npm publish",
    "heroku:get:mlab-uri": "heroku config:get MONGODB_URI",
    "start": "node server/index.js",
    "lint-client:watch": "esw --color -w src/client/**",
    "lint-server:watch": "esw --color -w src/server/**",
    "lint:watch": "npm run lint-client:watch && npm run lint-server:watch",
    "prepublish": "npm run build"
  },
  "betterScripts": {
    "build-server": {
      "command": "webpack --config dev/webpack2.config.server.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build-client": {
      "command": "webpack --config dev/webpack2.config.client.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "watch-server": {
      "command": "better-npm-run build-server --watch --colors"
    },
    "watch-client": {
      "command": "better-npm-run build-client --watch --colors"
    }
  },
  "version": "0.23.0"
}
