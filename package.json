{
  "name": "osnova-react-environment",
  "author": "Sasha snov Noviel <snov.contact@gmail.com>",
  "description": "ES6+ environment (Babel+Webpack2) for modern react application with OSNOVA-based server",
  "dependencies": {
    "better-npm-run": "^0.0.14",
    "osnova": "^0.17.4",
    "osnova-lib": "^1.0.3",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.22.0",
    "chokidar": "^1.6.1",
    "clean-webpack-plugin": "^0.1.15",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "2.2.0",
    "style-loader": "^0.13.1",
    "webpack": "2.2.0",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-node-externals": "^1.5.4"
  },
  "license": "ISC",
  "main": "server/index.js",
  "private": false,
  "readme": "README.md",
  "scripts": {
    "build": "npm run build-server && npm run build-client",
    "build-server": "babel src/server -d server --copy-files",
    "build-server-webpack": "webpack --config dev/webpack2.config.server.js --progress",
    "build-client": "better-npm-run build:prod",
    "watch-client": "better-npm-run watch-client",
    "watch-server": "better-npm-run watch-server",
    "nodemon": "nodemon server/index.js --config dev/nodemon.json",
    "major-release": "npm --no-git-tag-version version major && npm publish",
    "minor-release": "npm --no-git-tag-version version minor && npm publish",
    "patch-release": "npm --no-git-tag-version version patch && npm publish",
    "heroku:get:mlab-uri": "heroku config:get MONGODB_URI",
    "start": "node server/index.js",
    "lint-client:watch": "esw --color -w src/client/**",
    "lint-server:watch": "esw --color -w src/server/**",
    "lint:watch": "npm run lint-client:watch && npm run lint-server:watch"
  },
  "betterScripts": {
    "build-server": {
      "command": "webpack --config dev/webpack2.config.server.js --progress"
    },
    "watch-server": {
      "command": "better-npm-run build-server --watch"
    },
    "build-client": {
      "command": "webpack --config dev/webpack2.config.client.js --progress",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "watch-client": {
      "command": "better-npm-run build-client --watch"
    }
  },
  "version": "0.14.2"
}
